<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), Jobs.sln))\tools\Jobs.settings.targets"/>
  <PropertyGroup>
    <NuSpecFile>$(MSBuildProjectName).nuspec</NuSpecFile>
    <NuGetPackageTitle>Microsoft.WindowsAzure.Jobs</NuGetPackageTitle>
    <NuGetPackSymbols>false</NuGetPackSymbols>
  </PropertyGroup>
  <ItemGroup>
    <NuGetContent Include="$(JobsRootPath)\src\Microsoft.WindowsAzure.Jobs\bin\$(Configuration)\Microsoft.WindowsAzure.Jobs.dll">
      <Destination>lib\net45\Microsoft.WindowsAzure.Jobs.dll</Destination>
    </NuGetContent>
    <NuGetContent Include="$(JobsRootPath)\src\Microsoft.WindowsAzure.Jobs\bin\$(Configuration)\Microsoft.WindowsAzure.Jobs.xml">
      <Destination>lib\net45\Microsoft.WindowsAzure.Jobs.xml</Destination>
    </NuGetContent>
  </ItemGroup>
  <Import Project="$(JobsToolsPath)NuGetProj.targets"/>
  <Target Name="BeforeBuild">
    <PropertyGroup>
      <!-- Define properties you want to use inside your nuspec file. -->
      <NuSpecProperties>NuGetPackageTitle=$(NuGetPackageTitle);PackageEULA=$(JobsPackageEULA);JobsPackageVersion=$(JobsPackageVersion)</NuSpecProperties>
    </PropertyGroup>    
  </Target>
</Project>