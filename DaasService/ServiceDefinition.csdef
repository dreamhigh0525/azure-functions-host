<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="DaasService" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2012-05.1.7">
  <WorkerRole name="ExecutionRole" vmsize="ExtraSmall">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <LocalResources>
      <LocalStorage name="localStore" sizeInMB="100" cleanOnRoleRecycle="true" />
    </LocalResources>
    <ConfigurationSettings>
      <Setting name="MainStorage" />
    </ConfigurationSettings>
  </WorkerRole>
  <WorkerRole name="OrchestratorRole" vmsize="ExtraSmall">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <LocalResources>
      <LocalStorage name="localStore" sizeInMB="100" cleanOnRoleRecycle="true" />
    </LocalResources>
    <ConfigurationSettings>
      <Setting name="MainStorage" />
    </ConfigurationSettings>
  </WorkerRole>
  <WebRole name="WebFrontEnd" vmsize="ExtraSmall">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="MainStorage" />
    </ConfigurationSettings>
  </WebRole>
</ServiceDefinition>