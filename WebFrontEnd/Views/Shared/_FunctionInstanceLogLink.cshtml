@using WebFrontEnd.Controllers
@using Executor
@model ExecutionInstanceLogEntity

@{
    string color = null;
    var status = Model.GetStatus();
    switch (status)
    { 
        case FunctionInstanceStatus.CompletedFailed:
            color = "red"; break;
        case FunctionInstanceStatus.CompletedSuccess:
            color = "green"; break;
        case FunctionInstanceStatus.Running:
            color = "blue"; break;
            // don't colorize others.                 
    }       
    
    string shortName = Model.FunctionInstance.Location.GetShortName();    
}        

@Html.ActionLink(shortName, "FunctionInstance", new { func = Model.FunctionInstance.Id })
&nbsp(
<font color="@color">
    @status
</font>
)
