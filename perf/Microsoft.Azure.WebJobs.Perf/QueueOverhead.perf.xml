<?xml version="1.0" encoding="utf-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.microsoft.com/2011/12/aaptperffun#1">
  <metadata
      testName ="QueueOverhead"
      teamName ="SimpleBatch"
      description="The overhead added by the WebJobs SDK to queues">

    <trackingVariation name="Overhead-NoLogging">
      <metric name="Ratio" selection="Median" units="Percent">
        <target value="290" labConfig="default" priority = "1" />
      </metric>
    </trackingVariation>
    <trackingVariation name="Overhead-Logging">
      <metric name="Ratio" selection="Median" units="Percent">
        <target value="290" labConfig="default" priority = "1" />
      </metric>
    </trackingVariation>
  </metadata>

  <commands>
    <command name="Overhead-NoLogging" wait="Exit">
      Microsoft.Azure.WebJobs.Perf.exe /StorageConnectionString={ConnectionString} /Scenario=QueueOverhead-NoLogging
    </command>
    <command name="Overhead-Logging" wait="Exit">
      Microsoft.Azure.WebJobs.Perf.exe /StorageConnectionString={ConnectionString} /Scenario=QueueOverhead-Logging
    </command>
  </commands>

  <plan>
    <run command="Overhead-NoLogging" role="client" output="true" measure="StartAndStop"  />
    <run command="Overhead-Logging" role="client" output="true" measure="StartAndStop"  />
  </plan>
</config>